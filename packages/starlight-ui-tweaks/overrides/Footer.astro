---
import DefaultFooter from "@astrojs/starlight/components/Footer.astro";
import config from "virtual:starlight-ui-tweaks/config";
import { getLocaleConfig } from "../utils/getLocaleConfig";
import DefaultSocialIcons from "@astrojs/starlight/components/SocialIcons.astro";

const currentLocale = Astro.currentLocale;
const footer = getLocaleConfig(config, currentLocale, "footer");
const { template } = (Astro.locals as any).starlightRoute.entry.data;
const today = new Date();
const year = today.getFullYear();
const showSocialIcons = footer?.showSocialIcons;
---

{
  template === "doc" || !footer ? (
    <DefaultFooter />
  ) : (
    <footer>
      <div class="footer-container">
        <div class="footer-grid">
          <div class="footer-section">
            <div class="footer-column">
              <h3>{footer.firstColumn.title}</h3>
              <ul role="list">
                {footer.firstColumn.links.map((link) => {
                  return (
                    <li>
                      <a href={link.href}>{link.label}</a>
                    </li>
                  );
                })}
              </ul>
            </div>
            <div class="footer-column mt-10">
              <h3>{footer.secondColumn.title}</h3>
              <ul role="list">
                {footer.secondColumn.links.map((link) => {
                  return (
                    <li>
                      <a href={link.href}>{link.label}</a>
                    </li>
                  );
                })}
              </ul>
            </div>
          </div>
          <div class="footer-section">
            <div class="footer-column">
              <h3>{footer.thirdColumn.title}</h3>
              <ul role="list">
                {footer.thirdColumn.links.map((link) => {
                  return (
                    <li>
                      <a href={link.href}>{link.label}</a>
                    </li>
                  );
                })}
              </ul>
            </div>
            <div class="footer-column mt-10">
              <h3>{footer.fourthColumn.title}</h3>
              <ul role="list">
                {footer.fourthColumn.links.map((link) => {
                  return (
                    <li>
                      <a href={link.href}>{link.label}</a>
                    </li>
                  );
                })}
              </ul>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; {`${year} ${footer.copyright}`}</p>
          {showSocialIcons && (
            <div class="footer-social-icons">
              <DefaultSocialIcons />
            </div>
          )}
        </div>
      </div>
    </footer>
  )
}

<style>
  footer {
    margin: 0 auto;
    width: 100%;
    padding-bottom: 4rem;
  }

  .footer-container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 5rem 1.5rem 2rem 1.5rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .footer-section {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .footer-column h3 {
    font-size: 0.875rem;
    line-height: 1.5rem;
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .footer-column ul {
    list-style: none;
    margin-top: 1.5rem;
    padding-left: 0;
  }

  .footer-column ul li {
    margin-bottom: 1rem;
  }

  .footer-column ul li:last-child {
    margin-bottom: 0;
  }

  .footer-column a {
    font-size: 0.875rem;
    line-height: 1.5rem;
    color: var(--sl-color-gray-2);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-column a:hover {
    opacity: 0.66;
  }

  .footer-bottom {
    margin-top: 4rem;
    border-top: 1px solid var(--sl-color-gray-6);
    padding-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .footer-social-icons {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer-bottom p {
    font-size: 0.875rem;
    line-height: 1.5rem;
    color: var(--sl-color-gray-2);
    order: 1;
  }

  @media (min-width: 768px) {
    .footer-section {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-column.mt-10 {
      margin-top: 0;
    }
  }

  @media (min-width: 640px) {
    .footer-container {
      padding-top: 6rem;
    }

    .footer-bottom {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-direction: row;
    }

    .footer-bottom p {
      order: 0;
    }
  }

  @media (min-width: 1024px) {
    footer {
      max-width: 80rem;
    }

    .footer-container {
      padding-left: 2rem;
      padding-right: 2rem;
      padding-top: 8rem;
    }
  }
</style>
