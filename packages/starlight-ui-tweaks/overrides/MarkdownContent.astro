---
import Ad from "../components/Ad.astro";
import Default from "@astrojs/starlight/components/MarkdownContent.astro";
---

<Default>
  <slot />
</Default>

<div class="mobile-ad">
  <Ad />
</div>

<style>
  .mobile-ad {
    display: block;
  }

  @media (min-width: 1152px) {
    .mobile-ad {
      display: none;
    }
  }
</style>
