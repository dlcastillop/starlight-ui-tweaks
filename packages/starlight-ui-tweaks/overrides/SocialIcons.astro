---
import DefaultSocialIcons from "@astrojs/starlight/components/SocialIcons.astro";
import config from "virtual:starlight-ui-tweaks/config";
import { getLocaleConfig } from "../utils/getLocaleConfig";

const currentLocale = Astro.currentLocale;
const navbarLinks = getLocaleConfig(config, currentLocale, "navbarLinks");
const showSocialIcons = !config?.footer?.showSocialIcons;
---

<div
  class={`social-icons-extended ${showSocialIcons ? "" : "social-icons-hidden"}`}
>
  {
    navbarLinks && navbarLinks.length !== 0 && (
      <div class="custom-links">
        {navbarLinks.map((link) => (
          <a href={link.href} class="custom-link">
            {link.label}
          </a>
        ))}
      </div>
    )
  }
  {showSocialIcons && <DefaultSocialIcons />}
</div>

<style>
  .social-icons-extended {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .custom-links {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .custom-link {
    color: var(--sl-color-text-accent);
    text-decoration: none;
    font-size: var(--sl-text-sm);
    font-weight: 500;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .custom-link:hover {
    opacity: 0.66;
  }

  .custom-links::after {
    content: "";
    height: 2rem;
    border-inline-end: 1px solid var(--sl-color-gray-5);
  }

  @media (width < 800px) {
    .social-icons-hidden .custom-links::after {
      content: none;
      border: 0;
    }
  }
</style>
